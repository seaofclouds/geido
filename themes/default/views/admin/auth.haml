.container
  - if flash[:notice]
    .notice
      %h3= flash[:notice]
  .content
    %h1 Enter your password
    %form{:action=>"", :method => "post"}
      %fieldset
        %input{:type=>"password", :name => "password"}
        %input{:type => "submit", :value => "Log in"}

:javascript
  $(document).ready(function() {
    $(":password:visible:enabled:first").focus();
  });